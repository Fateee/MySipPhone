<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sip.phone.ui.home.HomeFragment"
        android:label="@string/title_dialer"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.sip.phone.ui.contact.ContactFragment"
        android:label="@string/title_contact"
        tools:layout="@layout/fragment_dashboard"
        android:saveEnabled="true"/>

    <fragment
        android:id="@+id/navigation_record"
        android:name="com.sip.phone.ui.notifications.RecordFragment"
        android:label="@string/title_record"
        tools:layout="@layout/fragment_record" />
</navigation>