<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.RecordFragment">

    <com.sip.contact.sortlist.ClearEditText
        android:id="@+id/et_search"
        android:textSize="16sp"
        android:textColorHint="#6f6f6f"
        android:layout_gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recordRv"
        android:drawableLeft="@drawable/ic___search"
        android:background="@drawable/search_et_bg"
        android:paddingHorizontal="15dp"
        android:layout_marginHorizontal="15dp"
        android:drawablePadding="10dp"
        android:layout_marginVertical="3dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:hint="请输入内容搜索"
        android:maxLines="1"
        android:singleLine="true"
        android:textCursorDrawable="@null" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recordRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/emptyTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/c9F9F9F"
        android:textSize="33sp"
        android:text="暂无通话记录"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>