    <color name="c0B58F4">#0B58F4</color>

    <!--dailview-->
    <style name="BorderlessBackgroud">
        <item name="android:background">@drawable/normal_backgroud_state</item>
    </style>

    <style name="BorderBackgroud">
        <item name="android:background">@drawable/normal_backgroud_state</item>
    </style>

    <style name="textview_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="SimpleCornerTextView">
        <attr name="bgColor" format="color"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="bottomRightRadius" format="dimension"/>
        <attr name="bottomLeftRadius" format="dimension"/>
        <attr name="topRightRadius" format="dimension"/>
        <attr name="topLeftRadius" format="dimension"/>
        <attr name="radius" format="dimension"/>
        <attr name="drawableWidth_left" format="dimension" />
        <attr name="drawableHeight_left" format="dimension" />
        <attr name="drawableWidth_top" format="dimension" />
        <attr name="drawableHeight_top" format="dimension" />
        <attr name="drawableWidth_right" format="dimension" />
        <attr name="drawableHeight_right" format="dimension" />
        <attr name="drawableWidth_bottom" format="dimension" />
        <attr name="drawableHeight_bottom" format="dimension" />
    </declare-styleable>

    <style name="SplashTheme" parent="Theme.SipPhone">
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:windowBackground">@drawable/bg_big_common</item>
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="MySwitchTheme">
        <item name="colorControlActivated">@color/c4CA4FF</item>
        <item name="colorSwitchThumbNormal">#FFF1F1F1</item>
        <item name="android:colorForeground">#FF2F2F2F</item>
    </style>
    <declare-styleable name="setItemLayout">
        <attr name="bg" format="color|reference"/>
        <attr name="icon" format="reference"/>
        <attr name="title" format="string|reference"/>
        <attr name="title_width" format="dimension"/>
        <attr name="title_color" format="color"/>
        <attr name="edit_hint" format="string|reference"/>
        <attr name="sub_title" format="string|reference"/>
        <attr name="sub_title_code" format="string"/>
        <attr name="sub_title1" format="string"/>
        <attr name="is_show_switch" format="boolean"/>
        <attr name="show_switch_value" format="boolean"/>
        <attr name="show_arraw" format="boolean"/>
        <attr name="right_icon" format="reference"/>
        <attr name="hide_divider" format="boolean"/>
        <attr name="edit_type">
            <enum name="normal" value="0"/>
            <enum name="number" value="1"/>
            <enum name="char_num" value="2"/>
            <enum name="numpassword" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="titleView" >
        <attr name="titleBgColor" format="reference"/>
        <attr name="lefticon" format="reference"/>
        <attr name="lefttitle" format="string"/>
        <attr name="toolbar_title" format="string|reference"/>
        <attr name="titleColor" format="reference"/>
        <attr name="righticon" format="reference"/>
        <attr name="righttitle" format="string|reference"/>
        <attr name="rightTitleColor" format="reference"/>
        <attr name="showDivider" format="boolean"/>
    </declare-styleable>
</resources>